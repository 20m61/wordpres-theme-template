{
    "name": "20m61/kawaii-ultra-theme",
    "description": "A modern WordPress theme template with OOP architecture and namespacing",
    "type": "wordpress-theme",
    "license": "MIT",
    "authors": [
        {
            "name": "20m61",
            "email": "20m61@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "KawaiiUltra\\Theme\\": "inc/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KawaiiUltra\\Theme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=phpcs.xml",
        "cs-fix": "phpcbf --standard=phpcs.xml",
        "analyze": "phpstan analyze",
        "lint": [
            "@cs-check",
            "@analyze"
        ],
        "quality": [
            "@lint",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}