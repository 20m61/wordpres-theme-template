{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"palette": [
				{
					"color": "#ffb6c1",
					"name": "Kawaii Pink",
					"slug": "kawaii-pink"
				},
				{
					"color": "#ff69b4",
					"name": "Hot Pink",
					"slug": "hot-pink"
				},
				{
					"color": "#ff1493",
					"name": "Deep Pink",
					"slug": "deep-pink"
				},
				{
					"color": "#fff0f5",
					"name": "Lavender Blush",
					"slug": "lavender-blush"
				},
				{
					"color": "#f0fff4",
					"name": "Honeydew",
					"slug": "honeydew"
				},
				{
					"color": "#f0f8ff",
					"name": "Alice Blue",
					"slug": "alice-blue"
				},
				{
					"color": "#fff5f8",
					"name": "Soft Pink",
					"slug": "soft-pink"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#2d3748",
					"name": "Dark Gray",
					"slug": "dark-gray"
				},
				{
					"color": "#4a5568",
					"name": "Medium Gray",
					"slug": "medium-gray"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(135deg, #ff69b4 0%, #ff1493 100%)",
					"name": "Pink to Deep Pink",
					"slug": "pink-to-deep-pink"
				},
				{
					"gradient": "linear-gradient(135deg, #ffb6c1 0%, #ff69b4 100%)",
					"name": "Light Pink to Pink",
					"slug": "light-pink-to-pink"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
			"fontSizes": [
				{
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					},
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					},
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.75rem",
						"max": "1.875rem"
					},
					"size": "1.875rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "2.25rem",
						"max": "2.5rem"
					},
					"size": "2.5rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "2.75rem",
						"max": "3rem"
					},
					"size": "3rem",
					"slug": "xx-large"
				}
			]
		},
		"spacing": {
			"customSpacingSize": true,
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "1rem",
					"slug": "20",
					"name": "1"
				},
				{
					"size": "1.5rem",
					"slug": "30",
					"name": "1.5"
				},
				{
					"size": "2rem",
					"slug": "40",
					"name": "2"
				},
				{
					"size": "3rem",
					"slug": "50",
					"name": "3"
				},
				{
					"size": "4rem",
					"slug": "60",
					"name": "4"
				},
				{
					"size": "5rem",
					"slug": "70",
					"name": "5"
				},
				{
					"size": "6rem",
					"slug": "80",
					"name": "6"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"border": {
			"customColor": true,
			"customRadius": true,
			"customStyle": true,
			"customWidth": true
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--dark-gray)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "30px"
				},
				"color": {
					"background": "var(--wp--preset--color--kawaii-pink)",
					"text": "var(--wp--preset--color--dark-gray)"
				},
				"typography": {
					"fontWeight": "700"
				},
				"spacing": {
					"padding": {
						"top": "0.75rem",
						"right": "1.5rem",
						"bottom": "0.75rem",
						"left": "1.5rem"
					}
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--hot-pink)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--hot-pink)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--deep-pink)"
					}
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--dark-gray)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--hot-pink)"
							}
						}
					}
				}
			},
			"core/site-tagline": {
				"color": {
					"text": "var(--wp--preset--color--medium-gray)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none",
							"fontWeight": "500"
						}
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "uncategorized"
		}
	],
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "page-no-title",
			"title": "Page (No Title)",
			"postTypes": [
				"page"
			]
		}
	]
}